#!/bin/bash 

find /home/saunders/projects/the-livingroom/dvcs-mirrors/bitbucket.com -maxdepth 8 -type d -path '*/src/main' -not -path '*/.hg/*' | grep adamchandra 
find /home/saunders/projects/the-livingroom/dvcs-mirrors/bitbucket.com -maxdepth 8 -type d -path '*/app' -not -path '*/.hg/*' | grep adamchandra 
find /home/saunders/projects/the-livingroom/dvcs-mirrors/bitbucket.com -maxdepth 8 -type d -path '*/conf' -not -path '*/.hg/*' | grep adamchandra 

find /home/saunders/projects/the-livingroom/dvcs-mirrors/bitbucket.com -maxdepth 8 -type d -path '*/src/main' -not -path '*/.hg/*' | grep 'iesl@bitbucket'
find /home/saunders/projects/the-livingroom/dvcs-mirrors/bitbucket.com -maxdepth 8 -type d -path '*/app' -not -path '*/.hg/*' | grep 'iesl@bitbucket'
find /home/saunders/projects/the-livingroom/dvcs-mirrors/bitbucket.com -maxdepth 8 -type d -path '*/conf' -not -path '*/.hg/*' | grep 'iesl@bitbucket'

