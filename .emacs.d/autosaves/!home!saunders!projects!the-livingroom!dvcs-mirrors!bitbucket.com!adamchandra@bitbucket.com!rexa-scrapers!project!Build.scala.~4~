import sbt._
import edu.umass.cs.iesl.sbtbase.Dependencies
import edu.umass.cs.iesl.sbtbase.IeslProject._

object ApplicationBuild extends Build {
  implicit val allDeps: Dependencies = new Dependencies()

  import allDeps._

  val vers = "0.1-SNAPSHOT"
  val organization = "cc.rexa2"


  val tagsoup               = "org.ccil.cowan.tagsoup" % "tagsoup" % "1.2.1"
  val html5parser           = "nu.validator.htmlparser" % "htmlparser" % "1.2.1"


  val deps : Seq[ModuleID] = Seq(
    dispatchCore(), 
    dispatchHttp(), 
    liftJson(), 
    scalazCore(), 
    specs2(), 
    tagsoup,
    html5parser
  )

  lazy val root = Project(
    "rexa-scrapers", file(".")
  ).ieslSetup (
    vers, deps, Public, WithSnapshotDependencies, org = organization, conflict = ConflictStrict
  ).cleanLogging.standardLogging

}
