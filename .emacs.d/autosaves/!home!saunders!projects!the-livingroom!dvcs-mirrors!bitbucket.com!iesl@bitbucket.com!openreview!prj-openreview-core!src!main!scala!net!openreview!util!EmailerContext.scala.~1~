package net.openreview.util

trait EmailerContext {
  def sendEmail(subject: String, recipient: String, body: String)
}

class PrintlnEmailerContext extends EmailerContext {
  def sendEmail(subject: String, recipient: String, body: String) {
    println("Email:")
    println("  to:" + recipient)
    println("  subject:" + subject)
    println("  body:" + body)
    println("=======================")
  }

}
