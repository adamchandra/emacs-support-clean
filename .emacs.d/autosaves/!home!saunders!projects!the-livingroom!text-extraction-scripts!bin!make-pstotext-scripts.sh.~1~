#!/bin/bash

declare workdir="scripts"
declare papers="papers"


find papers -type f \( -name "*.pdf" -o -name "*.ps" \) -a -not -name "._*" -printf "  \"%p\"\n" > $workdir/papers-to-process-pstotext.txt

cd $workdir

split -a 4 -d -l 100 papers-to-process-pstotext.txt run-pstotext-

for f in run-pstotext*
do
	cat sge-pstotext-pre $f sge-pstotext-post > "sge-$f.sh"
done