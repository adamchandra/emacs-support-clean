- import play.api.mvc._
-@ val request: RequestHeader

.flashing-message
  - request.flash.get("success").map (message =>
    .row-fluid
      .span6.offset3.center.alert.alert-success
        = message
        button.close(type="button" data-dismiss="alert")
          i.icon-remove
  - ) getOrElse ( request.flash.get("error").map ( message =>
    .row-fluid
      .span6.offset3.center.alert.alert-warning
        = message
        button.close(type="button" data-dismiss="alert")
          i.icon-remove
  - ) getOrElse ( 
    .row-fluid
      .span6.offset3.center.alert.alert-warning
        | Debugging message
        button.close(type="button" data-dismiss="alert")
          i.icon-remove
  - ))
