- import play.api.mvc._
- import status._

-@ val request: RequestHeader

- request.flash.get("success").map (message =>
  - view(FlashingMessage(message), "success")
- ) getOrElse ( request.flash.get("error").map ( message =>
  - view(FlashingMessage(message), "error")
- ) getOrElse ( 
  - view(FlashingMessage("debug msg"), "info")
- ))
