-@ val it : LoginNavComponent
- import it._

.btn-group
  - user.map { u =>
    a.btn.dropdown-toggle(data-toggle="dropdown" href="#")
      = u.fullname getOrElse u.username
      span.caret
    ul.dropdown-menu
      li
        a(href="#{nav.nav.profile()}") Profile
      li.divider
      li
        a(href="/logout") Logout
  - } getOrElse {
    a.loginbtn.btn.btn(href="/login") Login
  - }


:javascript
  returnTo = location.href.replace(/^http.?:\/\/[^/]+\//, '/');
  $(".loginbtn").attr('href', '/secure'+returnTo);
