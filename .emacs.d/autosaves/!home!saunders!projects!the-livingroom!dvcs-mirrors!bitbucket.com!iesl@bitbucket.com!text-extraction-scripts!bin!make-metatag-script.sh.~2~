#!/bin/bash

BIN="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source $BIN/common-defs.sh

# cd $workdir

declare file="$1"

declare inputPath=$(dirname "$file")
declare baseName=$(basename "$file")

cd $inputPath

cat <<EOF > "sge-$baseName.sh"
#!/bin/bash

# --- interpreter
#$ -S /bin/sh
#
# --- run from current dir
#$ -cwd
#
# --- job name
#$ -N rexa.metatag
#
# --- stdio redirection
# $ -e /dev/null
# $ -o /dev/null
#
# --- merge stdout/stderr?
#$ -j y
#
# --- pass on entire env
#$ -V

declare -r metatagger="$metatagger"

cat <<END | $metatagger 

EOF

cat $baseName >> "sge-$baseName.sh"

cat <<EOF >> "sge-$baseName.sh"
END
EOF



